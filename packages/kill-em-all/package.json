{
  "name": "kill-em-all",
  "version": "0.0.5",
  "type": "module",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "bin": {
    "kill-em-all": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup --clean",
    "dev": "tsup --watch",
    "prepack": "rm -rf dist && pnpm build",
    "test": "pnpm run /^test:/",
    "test:unit": "vitest run",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "test:lint": "eslint . --max-warnings 0 --ignore-pattern dist",
    "test:package": "publint"
  },
  "description": "A utility to kill a process and all its child processes and wait for them to exit",
  "license": "MIT",
  "repository": "github:cyco130/kill-em-all",
  "keywords": [
    "kill",
    "process",
    "tree",
    "process tree",
    "terminate",
    "signal",
    "windows",
    "linux",
    "macos",
    "wmic"
  ],
  "devDependencies": {
    "@cyco130/eslint-config": "^6.2.1",
    "@types/node": "^20.19.33",
    "eslint": "^10.0.1",
    "publint": "^0.3.17",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
